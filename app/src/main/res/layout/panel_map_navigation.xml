<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/map_panel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF"
    android:visibility="gone">

    <TextView
        android:id="@+id/map_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="이동하고 싶은 부스를 클릭해보세요!"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#243B5A"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/map_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닫기"
        android:textColor="#1A7DFF"
        android:textSize="16sp"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/map_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/map_title"
        app:layout_constraintBottom_toTopOf="@id/map_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp">

        <ImageView
            android:id="@+id/map_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:src="@null"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="16:9"/>

        <!-- 투명 버튼 20개 (위치는 디자인 탭에서 조정) -->
        <!-- 01~20: 기본 위치는 임시, 스튜디오에서 끌어 배치 -->
        <Button android:id="@+id/btn_01" style="@style/Widget.AppCompat.Button.Borderless" android:layout_width="64dp" android:layout_height="48dp" android:background="@android:color/transparent" app:layout_constraintTop_toTopOf="@id/map_image" app:layout_constraintStart_toStartOf="@id/map_image" android:layout_marginTop="40dp" android:layout_marginStart="40dp"/>
        <Button android:id="@+id/btn_02" style="@style/Widget.AppCompat.Button.Borderless" android:layout_width="64dp" android:layout_height="48dp" android:background="@android:color/transparent" app:layout_constraintTop_toTopOf="@id/map_image" app:layout_constraintStart_toEndOf="@id/btn_01" android:layout_marginTop="40dp" android:layout_marginStart="80dp"/>
        <Button android:id="@+id/btn_03" style="@style/Widget.AppCompat.Button.Borderless" android:layout_width="64dp" android:layout_height="48dp" android:background="@android:color/transparent" app:layout_constraintTop_toTopOf="@id/map_image" app:layout_constraintStart_toEndOf="@id/btn_02" android:layout_marginTop="40dp" android:layout_marginStart="80dp"/>
        <Button android:id="@+id/btn_04" style="@style/Widget.AppCompat.Button.Borderless" android:layout_width="64dp" android:layout_height="48dp" android:background="@android:color/transparent" app:layout_constraintTop_toTopOf="@id/map_image" app:layout_constraintStart_toEndOf="@id/btn_03" android:layout_marginTop="40dp" android:layout_marginStart="80dp"/>
        <Button android:id="@+id/btn_05" style="@style/Widget.AppCompat.Button.Borderless" android:layout_width="64dp" android:layout_height="48dp" android:background="@android:color/transparent" app:layout_constraintTop_toTopOf="@id/map_image" app:layout_constraintEnd_toEndOf="@id/map_image" android:layout_marginTop="40dp" android:layout_marginEnd="40dp"/>

        <Button android:id="@+id/btn_06" style="@style/Widget.AppCompat.Button.Borderless" android:layout_width="64dp" android:layout_height="48dp" android:background="@android:color/transparent" app:layout_constraintTop_toBottomOf="@id/btn_01" app:layout_constraintStart_toStartOf="@id/map_image" android:layout_marginTop="80dp" android:layout_marginStart="40dp"/>
        <Button android:id="@+id/btn_07" style="@style/Widget.AppCompat.Button.Borderless" android:layout_width="64dp" android:layout_height="48dp" android:background="@android:color/transparent" app:layout_constraintTop_toBottomOf="@id/btn_02" app:layout_constraintStart_toEndOf="@id/btn_06" android:layout_marginTop="80dp" android:layout_marginStart="80dp"/>
        <Button android:id="@+id/btn_08" style="@style/Widget.AppCompat.Button.Borderless" android:layout_width="64dp" android:layout_height="48dp" android:background="@android:color/transparent" app:layout_constraintTop_toBottomOf="@id/btn_03" app:layout_constraintStart_toEndOf="@id/btn_07" android:layout_marginTop="80dp" android:layout_marginStart="80dp"/>
        <Button android:id="@+id/btn_09" style="@style/Widget.AppCompat.Button.Borderless" android:layout_width="64dp" android:layout_height="48dp" android:background="@android:color/transparent" app:layout_constraintTop_toBottomOf="@id/btn_04" app:layout_constraintStart_toEndOf="@id/btn_08" android:layout_marginTop="80dp" android:layout_marginStart="80dp"/>
        <Button android:id="@+id/btn_10" style="@style/Widget.AppCompat.Button.Borderless" android:layout_width="64dp" android:layout_height="48dp" android:background="@android:color/transparent" app:layout_constraintTop_toBottomOf="@id/btn_05" app:layout_constraintEnd_toEndOf="@id/map_image" android:layout_marginTop="80dp" android:layout_marginEnd="40dp"/>

        <Button android:id="@+id/btn_11" style="@style/Widget.AppCompat.Button.Borderless" android:layout_width="64dp" android:layout_height="48dp" android:background="@android:color/transparent" app:layout_constraintTop_toBottomOf="@id/btn_06" app:layout_constraintStart_toStartOf="@id/map_image" android:layout_marginTop="80dp" android:layout_marginStart="40dp"/>
        <Button android:id="@+id/btn_12" style="@style/Widget.AppCompat.Button.Borderless" android:layout_width="64dp" android:layout_height="48dp" android:background="@android:color/transparent" app:layout_constraintTop_toBottomOf="@id/btn_07" app:layout_constraintStart_toEndOf="@id/btn_11" android:layout_marginTop="80dp" android:layout_marginStart="80dp"/>
        <Button android:id="@+id/btn_13" style="@style/Widget.AppCompat.Button.Borderless" android:layout_width="64dp" android:layout_height="48dp" android:background="@android:color/transparent" app:layout_constraintTop_toBottomOf="@id/btn_08" app:layout_constraintStart_toEndOf="@id/btn_12" android:layout_marginTop="80dp" android:layout_marginStart="80dp"/>
        <Button android:id="@+id/btn_14" style="@style/Widget.AppCompat.Button.Borderless" android:layout_width="64dp" android:layout_height="48dp" android:background="@android:color/transparent" app:layout_constraintTop_toBottomOf="@id/btn_09" app:layout_constraintStart_toEndOf="@id/btn_13" android:layout_marginTop="80dp" android:layout_marginStart="80dp"/>
        <Button android:id="@+id/btn_15" style="@style/Widget.AppCompat.Button.Borderless" android:layout_width="64dp" android:layout_height="48dp" android:background="@android:color/transparent" app:layout_constraintTop_toBottomOf="@id/btn_10" app:layout_constraintEnd_toEndOf="@id/map_image" android:layout_marginTop="80dp" android:layout_marginEnd="40dp"/>

        <Button android:id="@+id/btn_16" style="@style/Widget.AppCompat.Button.Borderless" android:layout_width="64dp" android:layout_height="48dp" android:background="@android:color/transparent" app:layout_constraintTop_toBottomOf="@id/btn_11" app:layout_constraintStart_toStartOf="@id/map_image" android:layout_marginTop="80dp" android:layout_marginStart="40dp"/>
        <Button android:id="@+id/btn_17" style="@style/Widget.AppCompat.Button.Borderless" android:layout_width="64dp" android:layout_height="48dp" android:background="@android:color/transparent" app:layout_constraintTop_toBottomOf="@id/btn_12" app:layout_constraintStart_toEndOf="@id/btn_16" android:layout_marginTop="80dp" android:layout_marginStart="80dp"/>
        <Button android:id="@+id/btn_18" style="@style/Widget.AppCompat.Button.Borderless" android:layout_width="64dp" android:layout_height="48dp" android:background="@android:color/transparent" app:layout_constraintTop_toBottomOf="@id/btn_13" app:layout_constraintStart_toEndOf="@id/btn_17" android:layout_marginTop="80dp" android:layout_marginStart="80dp"/>
        <Button android:id="@+id/btn_19" style="@style/Widget.AppCompat.Button.Borderless" android:layout_width="64dp" android:layout_height="48dp" android:background="@android:color/transparent" app:layout_constraintTop_toBottomOf="@id/btn_14" app:layout_constraintStart_toEndOf="@id/btn_18" android:layout_marginTop="80dp" android:layout_marginStart="80dp"/>
        <Button android:id="@+id/btn_20" style="@style/Widget.AppCompat.Button.Borderless" android:layout_width="64dp" android:layout_height="48dp" android:background="@android:color/transparent" app:layout_constraintTop_toBottomOf="@id/btn_15" app:layout_constraintEnd_toEndOf="@id/map_image" android:layout_marginTop="80dp" android:layout_marginEnd="40dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/map_back"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="뒤로 가기"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>

